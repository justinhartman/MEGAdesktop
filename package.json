{
  "name": "megadesktop",
  "version": "1.0.0",
  "description": "A Mega.nz Electron Desktop app for managing files on Windows, macOS and Linux.",
  "author": "Justin Hartman <code@justinhartman.co>",
  "copyright": "Copyright (c) 2021 Justin Hartman <code@justinhartman.co>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/justinhartman/MEGAdesktop.git"
  },
  "bugs": {
    "url": "https://github.com/justinhartman/MEGAdesktop/issues"
  },
  "main": "main.js",
  "scripts": {
    "icons": "./node_modules/.bin/electron-icon-builder --flatten --input=./src/icons/icon.png --output=./build",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "yarn eslint -c .eslintrc.js Gruntfile.js main.js menu.js preload.js --fix"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.61",
    "@electron-forge/maker-deb": "^6.0.0-beta.61",
    "@electron-forge/maker-rpm": "^6.0.0-beta.61",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.61",
    "@electron-forge/maker-zip": "^6.0.0-beta.61",
    "electron": "^15.1.2",
    "electron-icon-builder": "^2.0.1",
    "eslint": "^7.32.0",
    "git-changelog": "^2.0.0",
    "grunt": "^1.5.2",
    "grunt-bump": "^0.8.0",
    "grunt-git": "^1.1.1"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "name": "MEGAdesktop",
        "productName": "MEGAdesktop",
        "executableName": "MEGAdesktop",
        "appBundleId": "co.justinhartman.megadesktop",
        "appCategoryType": "public.app-category.productivity",
        "icon": "./build/icons/icon"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "MEGAdesktop"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin",
            "linux",
            "windows"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
